<config>
    <modules>
        <OdinsHat_EmailOnLogin>
            <version>0.0.1</version>
        </OdinsHat_EmailOnLogin>
    </modules>

    <global>
        <!--
            these always seem to come before events
            @todo: WHY?
         -->
        <models>
            <odinshat_emailonlogin>
                <class>OdinsHat_EmailOnLogin_Model</class>
            </odinshat_emailonlogin>
        </models>
        <events>
            <!-- this is the event I'm looking out for (observer) -->
            <admin_session_user_login_success>
                <observers>
                    <odinshat_emailonlogin>
                        <class>odinshat_emailonlogin/observer</class>
                        <method>sendEmail</method>
                        <type>singleton</type>
                    </odinshat_emailonlogin>
                </observers>
            </admin_session_user_login_success>
        </events>
    </global>
</config>